@import "colors.rasi"

* {
  background-color: @color0;
  text-color: @foreground;
}

configuration {
  icon-theme: "Everforest-Dark";
  font: "CaskaydiaCove Nerd Font Bold 16";
}

window {
  border: 0;
  border-radius: 20px;
}

inputbar {
  padding: 16px;
}

mainbox {
  padding: 16px;
}

entry {
  placeholder-color: @color8;
}

listview {
  spacing: 16px;
}

element {
  border-radius: 16px;
  padding: 16px;
}

element selected {
  background-color: @accent-color;
  text-color: @background-color;
}

element-text selected {
  text-color: @background-color;
}

element-icon {
  background-color: transparent;
  vertical-algign: 0.5;
}

element-text {
  background-color: transparent;
  vertical-algign: 0.5;
}
